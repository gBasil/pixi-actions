{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"baseUrl": "./",
		"target": "ES2020",
		"module": "ESNext",
		"allowJs": true,
		"moduleResolution": "node",
		"downlevelIteration": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"]
}
